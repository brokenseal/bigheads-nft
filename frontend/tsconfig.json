{
  "compilerOptions": {
    "lib": ["ES2018", "DOM"],
    "module": "esnext",
    "target": "ES6",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "typeRoots": [
      "./types",
      "../node_modules/@types",
      "../node_modules/@bigheads/backend"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build", "cache", "artifacts", "dist"]
}
